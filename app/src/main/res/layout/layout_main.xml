<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="35dp"
        android:textAlignment="center"
        android:text="@string/titile_name"
        android:gravity="center"
        android:background="@color/colorTitleBack"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <include
                android:id="@+id/order_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/order_list_item"
                />
            <ListView
                android:id="@+id/order_list_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:layout_marginLeft="10dp">

            </ListView>
            <include
                android:id="@+id/order_list_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/order_list_item"
                />
            <Button
                android:id="@+id/btn_order_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="下单"
                android:textSize="30dp"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>